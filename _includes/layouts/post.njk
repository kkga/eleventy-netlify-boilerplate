---
layout: layouts/base.njk
section: post
---

<article>
  <header>
    <h1>{{ title }}</h1>
    <small>
      {% if tags %}
      {% for tag in tags %} {%- if tag != "post" -%} {% set tagUrl %}/tags/{{
        tag
      }}/{% endset %}
      <a href="{{ tagUrl | url }}" rel="tag">#{{ tag }}</a>
      <span>&middot;</span>
      {%- endif -%} {% endfor %} {% endif %}
      <time datetime="{{ page.date | machineDate }}">{{ page.date | readableDate }}</time>
    </small>
  </header>

  {% if summary %}
    <p>{{ summary }}</p>
  {% endif %}

  {{ layoutContent | safe }}
</article>
<hr />
<nav>
  <a href="{{ '/writing/' | url }}">‚Üê Writing index</a>
</nav>
