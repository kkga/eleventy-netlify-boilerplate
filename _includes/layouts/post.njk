---
layout: layouts/base.njk
section: post
---

<article>
  <header>
    <h1>{{ title }}</h1>
    <small>
      <time datetime="{{ page.date | machineDate }}">{{ page.date | readableDate }}</time>
      {% if tags %}
      <span>&middot;</span>
      {% for tag in tags %} {%- if tag != "post" -%} {% set tagUrl %}/tags/{{
        tag
      }}/{% endset %}
      <a href="{{ tagUrl | url }}" rel="tag">#{{ tag }}</a>
      {%- endif -%} {% endfor %} {% endif %}
    </small>
    {% if summary %}
      <p>{{ summary }}</p>
    {% endif %}
  </header>
  

  {{ layoutContent | safe }}
</article>
<hr />
<nav>
  <a href="{{ '/writing/' | url }}">‚Üê Writing index</a>
</nav>
